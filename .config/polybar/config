# [Размеры панели]
# указываем название бара к которому будет обрящаться скрипт автозапуска launch.sh в стоке [bar/название бара]

[bar/example]


# [Ширина панели]
width = 100%

# [Высота панели]
height = 25


# [Зафиксированый центр]
# Можно задать динамический командой false
fixed-center = true

# [Локаль панели]
locale = ru_RU.UTF-8

border-size = 2
[[border-top-size]] = 0
[[border-bottom-size]] = 0
[[border-left-size]] = 0
[[border-right-size]] = 0
border-color = ${colors.background-alt}

# [Параметры панели под модулями]
line-size = 1
;line-color = [[f00]]


# [Отступы панели]
padding-left = 0
padding-right = 0


# [Отступы между модулями]
module-margin-left = 2
module-margin-right = 2


# [Шрифты]
font-0 = Iosevka Nerd Font:style=Medium:size=10;3
font-1 = FontAwesome5Free:style=Solid:size=7.5;2.5
font-2 = Weather Icons:size=7;2
font-3 = FontAwesome5Brands:style=Solid:size=7.5;2.5




# [Расположение и активация модулей]


modules-left = i3 menu
modules-center = title
modules-right = date eth cpu temperature memory temperature_core2 temperature_core3 pulseaudio xkeyboard powermenu


# системный лоток расположение tray иконок none|right|center|left
tray-position = right
tray-padding = 2
tray-detached = false

[[tray-background]] = [[0063ff]]



